@model INFM201.Models.Reservation

@{
    ViewBag.Title = "Manage Reservation";
}

<h2>Manage Reservation</h2>
<h3>Are you sure you want to proceed with the following actions?</h3>

<div>
    <h4>Reservation Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.CFullnames)</dt>
        <dd>@Html.DisplayFor(model => model.CFullnames)</dd>
        <dt>@Html.DisplayNameFor(model => model.Date)</dt>
        <dd>@Html.DisplayFor(model => model.Date)</dd>
        <dt>@Html.DisplayNameFor(model => model.Time)</dt>
        <dd>@Html.DisplayFor(model => model.Time)</dd>
        <dt>Is Completed:</dt>
        <dd>@(Model.IsCompleted ? "Yes" : "No")</dd>
    </dl>

    @using (Html.BeginForm("Delete", "Reservations", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ReservationID)
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this reservation?');">
            <i class="bi bi-trash"></i> Delete Reservation
        </button>
    }
</div>
<p>@Html.ActionLink("Back to List", "Index")</p>


    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" style="margin-top: 20px;">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" style="margin-top: 20px;">
            @TempData["ErrorMessage"]
        </div>
    }

    <script>
    document.querySelector(".btn-danger").onclick = function () {
            return confirm("Are you sure you want to delete this reservation?");
        };</script>
